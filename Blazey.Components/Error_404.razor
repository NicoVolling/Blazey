@inherits BaseComponent

<div class="d-flex align-items-center justify-content-center mt-5">
    <div class="text-center">
        <h1 class="display-1 fw-bold">404</h1>
        <p class="fs-3"> <span class="text-danger">Fehler!</span> Seite nicht gefunden</p>
        <p class="lead">
            Die Seite konnte nicht gefunden werden.
        </p>
        <p class="lead">
            Die Seite existiert entweder nicht oder auf die Seite kann nicht zugegriffen werden.
        </p>
        <a class="btn btn-light" onclick="if (document.referrer === '') { window.location.href = '/'; } else { window.history.back(); }">Zurück</a>
    </div>
</div>